# Aeturnis Online Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/aeturnis_online
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=aeturnis_online

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your_super_secret_jwt_key_here_min_256_bits
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Game Configuration
GAME_TICK_RATE=30
MAX_CONCURRENT_PLAYERS=1000
WORLD_SAVE_INTERVAL=300000

# External Services (Optional)
EMAIL_SERVICE_API_KEY=
SMS_SERVICE_API_KEY=
ANALYTICS_API_KEY=

# Development Only
DEBUG_MODE=false
ENABLE_SWAGGER_DOCS=true