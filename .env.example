# Aeturnis Online - Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
APP_VERSION=1.0.0

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/aeturnis_online
PGHOST=localhost
PGPORT=5432
PGDATABASE=aeturnis_online
PGUSER=username
PGPASSWORD=password

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long
API_KEY_SECRET=your-api-key-for-external-access-optional
ENCRYPTION_KEY=64-character-hex-string-for-encryption-optional

# Rate Limiting Configuration
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_AUTH=5
RATE_LIMIT_API=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Request Configuration
REQUEST_SIZE_LIMIT=10mb
COMPRESSION_THRESHOLD=1024

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/application.log

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_BYPASS_KEY=

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_AUDIT_LOG=true