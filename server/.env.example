# ────────────────
# Environment Flags
# ────────────────
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5173

# ────────────────
# Database & Cache
# ────────────────
DATABASE_URL=postgresql://user:password@localhost:5432/aeturnis
REDIS_URL=redis://localhost:6379

# ────────────────
# Authentication
# ────────────────
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ────────────────
# Session / Security
# ────────────────
SESSION_TIMEOUT_SECONDS=1800
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_API=1000
PASSWORD_RESET_EXPIRY_MINUTES=60

# ────────────────
# Redis Caching
# ────────────────
CACHE_TTL_CHARACTER=300
CACHE_TTL_COMBAT_SESSION=3600
CACHE_TTL_LEADERBOARD=300

# ────────────────
# Replit Teams Metadata
# ────────────────
TEAM_ID=$REPLIT_TEAM_ID
